{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "test": "deno test --parallel",
    "coverage": "deno task test --coverage=coverage && deno coverage coverage --lcov --output=coverage.lcov",
    "pre-commit": "deno task lint && deno task test && deno task fmt",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "tojson": "deno run tools/tojson.ts",
    "tocode": "deno run tools/tocode.ts",
    "validate": "deno run tools/validate.ts",
    "gen-docs": "deno run --allow-write=docs tools/generate_mappings.ts",
    "playground": "deno run tools/playground.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "@valibot/valibot": "jsr:@valibot/valibot@^1.1.0"
  }
}
